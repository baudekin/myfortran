{
  "languageserver": {
     "fortran": {
       "command": "fortls",
       "filetypes": ["fortran"],
       "rootPatterns": [".fortls", ".git/"]
     },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "trace.server": "verbose",
      "initializationOptions": {
        "cacheDirectory": "/tmp/ccls"
      }
    }
  }
}
